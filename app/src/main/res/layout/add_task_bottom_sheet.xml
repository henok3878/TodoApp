<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <View
        android:layout_width="2dp"
        android:id="@+id/add_task_priority_indicator"
        android:layout_height="48dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:hint="Task Name"
            android:background="@null"
            android:id="@+id/bottom_sheet_task_name"/>
        <ImageButton
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_upward"
            android:id="@+id/add_task_save_button"/>
    </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/add_task_set_priority_button"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="?attr/colorControlNormal"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:drawableTop="@drawable/ic_priority_solid"
            android:text="Priority"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/add_task_set_due_button"
            android:textSize="12sp"
            android:textColor="?attr/colorControlNormal"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:drawableTop="@drawable/ic_due_date"
            android:text="Due Date"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/add_task_set_reminder_button"
            android:textColor="?attr/colorControlNormal"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:drawableTop="@drawable/ic_add_reminder"
            android:text="Reminder"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/add_task_set_repetition_button"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="?attr/colorControlNormal"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:drawableTop="@drawable/ic_repeat"
            android:text="Repetition"/>
    </LinearLayout>

</LinearLayout>